Package: funcharts
Type: Package
Title: Functional Control Charts
Version: 1.1.0.9000
Authors@R: c(
    person("Christian", "Capezza", 
      email = "christian.capezza@unina.it", 
      role = c("cre","aut")),
    person("Fabio", "Centofanti", role = c("aut")), 
