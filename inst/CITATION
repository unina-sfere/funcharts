citHeader("To cite package ‘funcharts’ in publications use:")

bibentry(
 bibtype="Manual",
 title="funcharts: Functional Control Charts",
 year="2023",
 author="Christian Capezza and Fabio Centofanti and Antonio Lepore and Alessandra Menafoglio and Biagio Palumbo and Simone Vantini",
 url = "https://CRAN.R-project.org/package=funcharts",
 note = "R package version 1.3.2",
 textVersion="Capezza C, Centofanti F, Lepore A, Menafoglio A, Palumbo B, Vantini S (2023). _funcharts: Functional Control Charts_. R package version
  1.3.2, <https://CRAN.R-project.org/package=funcharts>."
)

bibentry(
 bibtype="Article",
 title="{funcharts: Control charts for multivariate functional data in R}",
